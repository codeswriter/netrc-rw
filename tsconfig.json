{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "nodenext",
    "lib": ["es6", "dom"],
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "dist/**/*",
    "node_modules"
  ],

}
